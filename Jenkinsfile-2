pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                echo 'Clone Stage'
                git branch: 'main', credentialsId: 'git-pat', url: 'https://github.com/ankitr-c/py-flask.git'
            }
            }
            stage('Build') {
                steps {
                    echo 'Build Stage'
                    script {
                        ver = readFile('version2').trim()
                        sh "sudo docker buildx build -t ${ver} ."
                    }
                }
            }
            stage('Deploy') {
                steps {
                    echo 'Deploy Stage'
                    script {
                        sh 'sudo docker-compose down && sudo docker-compose up -d'
                    }
                }
            }
    }
}
